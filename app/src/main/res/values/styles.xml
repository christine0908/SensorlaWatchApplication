<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/GoogleTextViewStyle</item>
        <item name="android:buttonStyle">@style/GoogleButtonStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>

        <item name="android:spinnerStyle">@style/GoogleSpinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
    </style>

    <style name="Material" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:fontFamily">@font/google</item>
    </style>

    <style name="GoogleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/google</item>
    </style>

    <style name="GoogleButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/google</item>
    </style>

    <style name="GoogleSpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/google</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/google</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

